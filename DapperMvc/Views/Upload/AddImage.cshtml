@model DapperMvc_Upload_Image.Models.ViewModel.ImageVM

@{
    ViewData["Title"] = "Upload Image";
}

<h1>Upload Image</h1>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="AddImage" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file" asp-for="ImagePath" class="form-control-file" placeholder="Select File" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary float-right" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
